/* components/FoodCard/FoodCard.wxss */
.card {
  width: 200rpx;
  height: 300rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 15px;
  position: relative;
}
.card>.avator {
  width: 90%;
  height: 70%;
}
.card>.info {
  font-size: 26rpx;
}
.preDel {
  animation: shake 1s infinite;
}
.del {
  position: absolute;
  top: -10px;
  right: -10px;
  color: white;
  text-align: center;
  line-height: 20px;
  width: 20px;
  height: 20px;
  background-color: red;
  border-radius: 50%;
}

@keyframes shake {
  0%, 100% {transform: rotate(0)}
  20% {transform: rotate(5deg);}
  40% {transform: rotate(10deg);}
  60% {transform: rotate(-10deg);}
  80% {transform: rotate(-5deg);}
}