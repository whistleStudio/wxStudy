/* components/SellerCard/SellerCard.wxss */
.card {
  width: 100vw;
  height: 18vh;
  border: 1px solid black;
  display: flex;
  margin-top: 15px;
}
.card>.img {
  width: 30%;
  height: 100%;
  border: 3px solid white;
  box-sizing: border-box;
}
.card>.info {
  /* width: 75%; */
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  font-size: 28rpx;
}